<% if current_user_role == 'admin' %>

  <%= link_to 'Nouvel article', new_article_path(), class: 'button is-primary ml-3', role: 'button' %>

<% end %>

<div class="grid-systems">

  <% if @articles.present? %>

    <% @articles.each do |article| %>
        <div class="col-md-4">
          <%= render partial: 'articles', locals: { article: article } %>
        </div>
      <% end %>

    <% else %>

      <h1 class="title">Aucun article ne correspond Ã  votre recherche... </h1>

    <% end %>

</div>

<div class="see-more m-5">
  <%= paginate @articles %>
</div>

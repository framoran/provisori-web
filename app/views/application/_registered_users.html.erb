<header>

  <nav class="navbar mt-3 is-flex-wrap-wrap" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href=<%="/#{I18n.locale }/home"%>>
        <strong>PROVISORI Media</strong>
      </a>

      <button class="navbar-item button is-black mt-3 ml-1 menu" id = "openNav3">
        <i class="fas fa-bars is-light"></i>
      </button>

    </div>

    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start">

        <%= render partial: 'nav_links' %>

      </div>

      <div class="navbar-end mr-3">
        <button class="navbar-item button is-black mt-3" id = "openNav">
          <i class="fas fa-search"></i>
        </button>

        <button class="navbar-item button is-black mt-3 ml-1" id = "openNav2">
          <i class="fas fa-bars is-light"></i>
        </button>
      </div>

    </div>
    <div id="mySidenav" class="sidenav">
      <div class="p-3">
        <a href="javascript:void(0)" class="closebtn" id="closeNav">&times;</a>
        <div class="field has-addons mt-5">

          <div class="control">

              <%= form_tag "/#{I18n.locale}/article", method: :get do %>
                <div class="is-inline-flex">
                  <div class="control">
                    <%= label_tag :a, 'Search term', class: 'input is-hidden' %>
                    <%= text_field_tag :a, params[:a], class: 'input', placeholder: 'e.g. Sport' %>
                  </div>
                  <div>
                    <button class='button'>
                      <i class="fas fa-search"></i>
                    </button>
                  </div>
                </div>
              <% end %>

          </div>
        </div>
        <div class="sidenav__menu mt-3_negative mb-3">

          <%= render partial: 'nav_links' %>

        </div>
        <div>
          <!-- Contact page needed to be implemented -->
          <%= link_to "Contact", "#", class: 'button is-medium mt-5' %>
          <%= link_to 'Profil',  user_path(current_user.id), class: 'button is-medium mt-1', role: 'button' %>
          <%= link_to(I18n.translate('logout'), session_path(1), method: :delete, class: 'button is-primary is-medium mt-1') %>
        </div>
      </div>
    </div>
  </nav>
  <hr />
</header>

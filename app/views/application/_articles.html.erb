<div class="grid-system">
  <div class="card grid-system-card">
    <div class="card-image">
      <figure class="image is-4by3">
        <% if article.image.present? %>
           <img class="avatar" src="<%= article.image %>" alt="<%= article.alt %>">
        <% else %>
          <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
        <% end %>
      </figure>
    </div>
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <img src="https://provisorimedia-elements.s3.amazonaws.com/Thomas.jpg" alt="Placeholder image" class="rounded" >
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4"><%= article.title %>d</p>
          <p class="subtitle is-6">Thomas Pfefferl√©</p>
        </div>
      </div>

      <br>
      <%= link_to(I18n.translate('read_more'), article_path(article), class:"button is-black is-fullwidth") %>
    </div>

    <div>
      <% if current_user_role == 'admin' %>
        <%= form_for article do |f| %>

          <%= f.submit "Retirer l'article", class: 'button is-danger' %>

        <% end %>
      <% end %>
    </div>
  </div>
</div>

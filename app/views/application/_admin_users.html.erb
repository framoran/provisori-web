<header>

  <nav class="navbar mt-3" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="/">
        <strong>PROVISORI Media</strong>
      </a>

    </div>

    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start">

        <a href="/article?q=1" class="navbar-item">
          Like a boss
        </a>

        <a href="/article?q=2" class="navbar-item">
          Artistes
        </a>

        <a href="/article?q=3" class="navbar-item">
          Stories de ouf
        </a>

        <a href="/article?q=4" class="navbar-item">
          Tinder fails
        </a>

        <a href="/article?q=5" class="navbar-item">
          Zen tu seras
        </a>

        <a href="/article?q=6" class="navbar-item">
          Spoiler pour flemmards
        </a>

        <a href="/game" class="navbar-item">
          Le Game
        </a>

      </div>

      <div class="navbar-end mr-3">
        <button class="navbar-item button is-dark mt-3" id = "openNav">
          <i class="fas fa-search"></i>
        </button>

        <button class="navbar-item button is-dark mt-3 ml-1" id = "openNav2">
          <i class="fas fa-bars is-light"></i>
        </button>
      </div>

      <div id="mySidenav" class="sidenav">
        <div class="p-3">
          <a href="javascript:void(0)" class="closebtn" id="closeNav">&times;</a>
          <div class="field has-addons mt-5">
            <%= form_tag home_index_path, method: :get do %>
              <div class="columns p-3 pr-6">
                <div class="column is-three-quarters">
                  <%= label_tag :a, 'Search term', class: 'sr-only' %>
                  <%= text_field_tag :a, params[:a], class: 'input', placeholder: 'e.g. Ruby classes' %>
                </div>
                <div class="column auto">
                  <%= submit_tag 'Search', class: 'button is-primary' %>
                </div>
              </div>
            <% end %>
          </div>
          <div>
            <%= link_to 'Utilisateurs', users_path(), class: 'button is-medium', role: 'button' %>
            <%= link_to 'Profil', user_path(current_user_id), class: 'button is-medium mt-1', role: 'button' %>
            <%= link_to 'Articles en construction', articles_path(), class: 'button is-medium mt-1', role: 'button' %>
            <%= link_to 'Game de la semaine', games_path(), class: 'button is-medium mt-1', role: 'button' %>
            <%= link_to('logout', session_path(1), method: :delete, class: 'button is-primary is-medium mt-1') %>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <hr />
</header>

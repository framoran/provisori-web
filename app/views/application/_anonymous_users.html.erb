<header>

  <nav class="navbar mt-3 is-flex-wrap-wrap" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="/">
        <strong>PROVISORI Media</strong>
      </a>

      <button class="navbar-item button is-black mt-3 ml-1 menu" id = "openNav3">
        <i class="fas fa-bars is-light"></i>
      </button>

    </div>

    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start">

        <%= render partial: 'nav_links' %>

      </div>

      <div class="navbar-end mr-3">
        <button class="navbar-item button is-black mt-3" id = "openNav">
          <i class="fas fa-search"></i>
        </button>

        <button class="navbar-item button is-black mt-3 ml-1" id = "openNav2">
          <i class="fas fa-bars is-light"></i>
        </button>
      </div>

    </div>
    <div id="mySidenav" class="sidenav">
      <div class="p-3">
        <a href="javascript:void(0)" class="closebtn" id="closeNav">&times;</a>
        <div class="field has-addons mt-5">
          <div class="control">
            <input class="input is-medium" type="text" placeholder="<%= I18n.translate('search') %>">
          </div>
          <div class="control">
            <a class="button is-medium">
              <i class="fas fa-search"></i>
            </a>
          </div>
        </div>
        <div class="sidenav__menu">
          <%= render partial: 'nav_links' %>
        </div>
        <div>
          <!-- Contact page needed to be implemented -->
          <%= link_to "Contact", "/", class: 'button is-medium mt-5' %>
          <%= link_to I18n.translate('login'), login_path, class: 'button is-medium mt-1' %>
          <%= link_to I18n.translate('register'), signup_path, class: 'button is-primary is-medium mt-1' %>
        </div>
      </div>
    </div>
  </nav>
  <hr />
</header>

<% case element.elements_type
  when "body" %>
    <p class="mt-5">
      <%= element.body %>
    </p>
    <%
  when "subtitle1" %>
    <h1 class="title mt-5">
      <%= element.subtitle1 %>
    </h1> <%
  when "subtitle2" %>
    <h2 class="subtitle mt-5">
      <%= element.subtitle2 %>
    </h2> <%
  when "video" %>
    <video class="mt-5" width="320" height="240" controls>
      <source src="<%= element.src %>" type="video/mp4">
        Your browser does not support the video tag.
    </video> <br/>
    <%
    when "image" %>
    <div class="has-text-centered	">
      <img class="mt-5" src="<%= element.src %>" alt="<%= element.alt %>" />
    </div>
    <br /> <%
    when "podcast" %>
        <div class="has-text-centered	">
          <audio controls>
            <source src="<%= element.src %>" type="audio/mp3">
          Your browser does not support the audio element.
          </audio>
        </div>
        <br /> <%
    else
      "Error"
    end

%>

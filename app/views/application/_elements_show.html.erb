<% case element.elements_type
  when "body" %>
    <p class="mt-5">
      <%= element.body %>
    </p>
    <%
  when "subtitle1" %>
    <h1 class="title mt-5">
      <%= element.subtitle1 %>
    </h1> <%
  when "subtitle2" %>
    <h2 class="subtitle mt-5">
      <%= element.subtitle2 %>
    </h2> <%
  when "video" %>
    <div class="has-text-centered	">
      <video class="mt-5" width="320" height="240" controls>
        <source src="<%= element.imgart %>" type="video/mp4">
          Your browser does not support the video tag.
      </video> <br/>
    </div>
    <%
    when "video-youtube" %>
      <div class="has-text-centered	">
        <% $src = element.src.sub('/watch?v=', "/embed/") %>

        <iframe width="320" height="240" src="<%= $src %>">
        </iframe>
      </div>
      <%= link_to 'X', element_path(element), class: 'button is-danger is-small', method: :delete %>
      <%
    when "image" %>
    <div class="has-text-centered	">
      <img class="mt-5" src="<%= element.imgart %>" alt="<%= element.alt %>" />
    </div>
    <br /> <%
    when "podcast" %>
        <div class="has-text-centered	mt-5">
          <audio controls>
            <source src="<%= element.imgart %>" type="audio/mp3">
          Your browser does not support the audio element.
          </audio>
        </div>
        <br /> <%
    else
      "Error"
    end

%>

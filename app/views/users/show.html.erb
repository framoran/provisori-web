<% if notice != nil %>
  <div class="ml-3">
    <p class="notification is-info"><%= notice %></p>
  </div>
<% end %>
<div class="columns mt-5 p-5">
  <div class="box mt-5 mb-5 column is-three-fifths is-offset-one-fifth">
    <h1 class="mt-5 has-text-centered title">Profil</h1>
    <div class="has-text-centered">
      <figure class="image is-128x128">
        <% if @user.avatar.present? %>
          <img class="avatar" src="<%= @user.avatar %>", alt: "Avatar for #{@user.name}", class: 'is-rounded'>
        <% else %>
          <%= image_tag default_avatar(@user), class: 'is-rounded', alt: "Avatar for #{@user.name}" %>
        <% end %>
      </figure>
    </div>
    <div class="p-3">
      <p class="mt-3"><strong>Nom:</strong> <em><%= @user.name %></em>
      <p class="mt-3"><strong>Nom de famille:</strong> <em><%= @user.last_name %></em>
      <p class="mt-3"><strong>Email:</strong> <em><%= @user.email %></em>

      <div class="mt-5">

        <%= link_to 'Editer', edit_user_path(current_user.id), class: 'button is-medium is-primary', role: 'button' %>

      </div>

    </div>

  </div>
</div>

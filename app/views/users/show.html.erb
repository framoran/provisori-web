<div class="columns mt-5 p-3">
  <div class="box mt-5 mb-5 column is-three-fifths is-offset-one-fifth">
    <h1 class="mt-5 has-text-centered title">Profil</h1>
    <div class="p-3">
      <p class="mt-3"><strong>Nom:</strong> <em><%= @user.name %></em>
      <p class="mt-3"><strong>Nom de famille:</strong> <em><%= @user.last_name %></em>
      <p class="mt-3"><strong>Email:</strong> <em><%= @user.email %></em>

      <div class="mt-5">

        <%= link_to 'Editer', edit_user_path(current_user_id), class: 'button is-medium is-primary', role: 'button' %>

      </div>

    </div>

  </div>
</div>

<div class="columns mt-5 p-3">
  <div class="box mt-5 mb-5 column is-three-fifths is-offset-one-fifth">
    <h1 class="mt-5 has-text-centered title">S'enregistrer</h1>
    <%= form_for(@user) do |form| %>
      <% if @user.errors.any? %>
        <%= render partial: 'model_errors', locals: { model: @user } %>
      <% end %>

      <div class="field">
        <%= form.label(:name, 'PrÃ©nom', class: 'label') %>
        <div class="control has-icons-left">
          <%= form.text_field(:name, class: 'input') %>
          <span class="icon is-small is-left">
            <i class="fas fa-pen-alt"></i>
          </span>
        </div>
      </div>

      <div class="field">
        <%= form.label(:last_name, 'Nom de famille',  class: 'label') %>
        <div class="control has-icons-left">
          <%= form.text_field(:last_name, class: 'input') %>
          <span class="icon is-small is-left">
            <i class="fas fa-pen-alt"></i>
          </span>
        </div>
      </div>

      <div class="field">
        <%= form.label :email, 'Email', class: 'label' %>
        <div class="control has-icons-left">
          <%= form.email_field :email, class: 'input', placeholder: 'e.g. david.etanoel@gmail.com' %>
          <span class="icon is-small is-left">
             <i class="fas fa-envelope"></i>
           </span>
        </div>
      </div>

      <div class="field">
        <%= form.label(:password, 'Mot de passe', class: 'label') %>
        <div class="control has-icons-left">
          <%= form.password_field(:password, class: 'input') %>
          <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
          </span>
        </div>
      </div>

       <div class="field">
         <div class="control has-icons-left">
           <%= form.submit "S'enregistrer", class: 'button is-primary mt-3' %>
         </div>
       </div>
    <% end %>
  </div>
</div>

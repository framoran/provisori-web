<% if flash.any? %>
  <% flash.each do |name, message| %>
    <div class="ml-3">
      <p class="notification is-info is-light"><%= message %></p>
    </div>
  <% end %>
<% end %>

<h1 class="title has-text-centered"> Tous les utilisateurs </h1>

<% @users.each do |user| %>

  <%= render partial: 'users', locals: { user: user } %>

<% end %>

<div class="mt-5">
  <%= paginate @users %>
</div>

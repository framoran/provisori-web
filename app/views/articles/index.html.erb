<div class="p-5">

  <%= link_to 'Nouvel article', new_article_path(), class: 'button is-primary mb-3', role: 'button' %>

  <div class="grid-systems">

    <% @articles.each do |article| %>
        <div>
          <%= render partial: 'articles_to_build', locals: { article: article } %>
        </div>
    <% end %>

  </div>

  <div class="see-more m-5">
    <%= paginate @articles %>
  </div>

</div>
